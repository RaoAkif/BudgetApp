<%= render 'partials/page_header' %><br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-field" %>
  </div>

  <div class="actions pt-30">
    <%= f.submit "Send reset password instructions", class: "btn reg-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
