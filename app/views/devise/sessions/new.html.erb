<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-field" %>
  </div>

  <div class="actions pt-30">
    <%= f.submit "Log in", class: "btn login-btn" %>
  </div>
<% end %>

<div>
  <%= render "devise/shared/links", class: "shared-link-partial" %>
</div>
